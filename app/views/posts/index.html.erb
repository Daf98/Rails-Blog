<h1><%= @user.photo %></h1>
<h1><%= @user.name %></h1>
<h2>Number of posts: <%= @user.posts.length %>

<% @posts.each_with_index do |post, index| %>
<div>
<a href="posts/<%= post.id %>">Post #<%= index %></a>
<p><%= post.title %></p>
<p><%= post.text %></p>
<p>Comments:<%= post.comments_counter %></p>
<p>Likes:<%= post.likes_counter %></p>
</div>
<% end %>
