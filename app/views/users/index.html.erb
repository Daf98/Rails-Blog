<h1>Users</h1>

<table>
  <thead>
    <tr>
    <th>Photo</th>
      <th>Name</th>
      <th>Number of posts</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      <td><img src="<%= user.photo %>"></td>
        <td><%= user.name %></td>
        <td><%= user.posts.length %></td>
        <td><%= link_to "Show", user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>