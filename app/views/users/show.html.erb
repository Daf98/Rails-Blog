<div class="page-start">
<a class="back-arrow" href="/">Back</a>
<img src="<%= @user.photo %>">
<h1><%= @user.name %></h1>
<h2>Number of posts: <%= @user.posts.length %>
<h2>Bio: <%= @user.bio %></h2>
<h3>Posts</h3>
<div class="posts">
<% @posts.each_with_index do |post, index| %>
<div class="post">
<h4><a href="/users/<%= @user.id %>/posts/<%= post.id %>">Post #<%= post.id %></a></h4>
<p><%= post.title %></p>
<p><%= post.text %></p>
</div>
<% end %>
</div>

<a href='<%= @user.id %>/posts'>See all posts</a>
<a href='<%= @user.id %>/posts/new'>Create new post</a>
</div>