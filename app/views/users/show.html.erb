<img src="<%= @user.photo %>">
<h1><%= @user.name %></h1>
<h2>Number of posts: <%= @user.posts.length %>

<p>Bio: <%= @user.bio %></p>
<h3>Posts</h3>
<% @posts.each_with_index do |post, index| %>
<h4>Post #<%= index %></h4>
<p><%= post.title %></p>
<p><%= post.text %></p>
<% end %>
<a href="<%= @user.id %>/posts">See all posts</a>
<a href='<%= @user.id %>/posts/new'>Create new post</a>