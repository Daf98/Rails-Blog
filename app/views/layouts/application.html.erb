<!DOCTYPE html>
<html>
  <head>
    <title>W.A.S.T.E.</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
      <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('favicon.ico') %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <nav class="user-info">
  <%= link_to "Sign up", '/sign_up', :class => 'navbar-link'  %>
<%= link_to "Login", '/login', :class => 'navbar-link'  %>
  <% if user_signed_in?%>
      <%= button_to "Logout", destroy_user_session_path, { method: :delete, data: { turbo:false }, :class => 'navbar-link'}  %>
    <% end %>
</nav>
    <%= yield %>
    <% flash.each do |type, msg| %>
        <div class="alert <%= type %>">
          <%= msg %>
        </div>
      <% end %>
  </body>
</html>
